<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dbmapper">
	<select id="select_top10" resultType="getset.H_getset">
		SELECT
		h_hotel.h_pho,
		h_hotel.country_ko,
		h_hotel.city_ko,
		h_hotel.h_name_ko,
		COUNT(h_room.h_name_eng) AS room_count
		FROM
		h_reserve
		INNER JOIN
		h_room ON
		h_reserve.h_roomnum = h_room.h_roomnum
		INNER JOIN
		h_hotel ON
		h_room.h_name_eng = h_hotel.h_name_eng
		GROUP BY
		h_hotel.h_pho,
		h_hotel.country_ko, h_hotel.city_ko, h_hotel.h_name_ko
		ORDER BY
		room_count DESC
		LIMIT 10;
	</select>

	<select id="select_ukAll" resultType="getset.H_getset">
		SELECT * from h_hotel
		where
		country="uk";

	</select>

	<select id="select_italyAll" resultType="getset.H_getset">
		SELECT * from h_hotel
		where country="italy";

	</select>

	<select id="select_franceAll" resultType="getset.H_getset">
		SELECT * from h_hotel
		where country="france";

	</select>
	
	<select id="select_spainAll" resultType="getset.H_getset">
		SELECT * from h_hotel
		where country="spain";

	</select>

	<select id="select_top10_info" resultType="getset.H_getset">
		SELECT * from h_hotel
		where h_name_eng='{h_name_eng}';

	</select>



</mapper>